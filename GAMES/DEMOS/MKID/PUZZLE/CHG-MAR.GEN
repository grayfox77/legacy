	DEFB	0,0	;SX
	DEFB	0,0	;SY
	DEFB	0,0	;DX
	DEFB	247,0	;DY
	DEFB	192,0	;NX
	DEFB	2,0	;NY
	DEFB	0,0	;CO & ARG
	DEFB	#d0

