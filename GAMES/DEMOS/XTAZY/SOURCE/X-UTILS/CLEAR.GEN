;	OUT:	none
;	MOD:	AF,BC
;
clear_pgb:
	xor	a
	out	(vdp+4),a
	out	(vdp+3),a
	out	(vdp+3),a
	ld	a,#04
	out	(vdp+3),a

	ld	bc,#0000
loop_pgb:
	xor	a
	out	(vdp+0),a
	dec	bc
	ld	a,b
	or	c
	jp	nz,loop_pgb
	ret

