10 SCREEN 0:WIDTH40:KEYOFF
20 IF PEEK(&HFC4B)*256+PEEK(&HFC4A)<58000! THEN 50
30 CLEAR 0
40 BLOAD"CAS2DSK.BIN",R
50 BEEP:BEEP
60 LOCATE4,10:PRINT"MEMORIA INSUFFICENTE: SPEGNI IL"
70 LOCATE4,11:PRINT"COMPUTER ED IL SECONDO DRIVE SE"
80 LOCATE4,12:PRINT"COLLEGATO. ACCENDI IL COMPUTER E"
90 LOCATE4,13:PRINT"TIENI PREMUTO IL TASTO <CTRL>"
100 LOCATE4,14:PRINT"FINCHE` NON SENTI UN BEEP."
110 BEEP:BEEP
120 GOTO 120
