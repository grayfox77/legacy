MnuGFS:dw   04000H
OpnStC:dw   21*32+10
Resorc:db   00010010B

SetupR:ret  nz
       ld   hl,04000H
       xor  a
       ld   (hl),a
       inc  hl
       ld   (hl),a
       ld   hl,0C000H
       ld   de,0C001H
       ld   bc,001FFH
       ld   (hl),000H
       ldir
SilnRt:ld   a,(0569CH)
       cp   03EH
       ld   a,0C9H
       jr   z,SilnR1
       ld   (05446H),a
       ld   (0546FH),a
       jp   0567FH

SilnR1:ld   (05465H),a
       ld   (0548EH),a
       jp   0569CH

StMsRt:push hl
       push de
       push bc
       push af
       ld   a,(0569CH)
       cp   03EH
       jr   z,StMsR1
       pop  af
       jp   056EAH

StMsR1:pop  af
       jp   05707H

PlayRt:jp   06000H

GmBlNm:db   'TrsrUsas000'
GmBlSz:dw   02000H
LoadAd:dw   04000H
GmBlN1:db   'TrsrUsas001'
